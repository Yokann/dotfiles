# Quick cd to project
cdproj() {
  cd $PROJECTS_ROOT_DIR/$1
}


stream() {
   $DOTFILES_PATH/config/hypr/scripts/stream "$@"
}

# yazi wrapper
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

# vim: ft=zsh
