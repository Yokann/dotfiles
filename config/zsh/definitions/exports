export EDITOR='nvim'
# Set default editor for sudoedit
export VISUAL='nvim'

# Make some commands not show up in history
export HISTIGNORE="ls:cd:cd -:pwd:exit:date:* --help"
# And include the parameter for ZSH
export HISTORY_IGNORE="(ls|cd|cd -|pwd|exit|date|* --help)"
# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"
# set terminal in English
export LC_ALL=en_US.UTF-8

# Enhancd zsh plugin
export ENHANCD_FILTER="fzf"
export ENHANCD_DOT_ARG="..."

# Use to cdproj alias
export PROJECTS_ROOT_DIR="$HOME/projets"

# Rust
[[ -f "$HOME/.cargo/env" ]] && source "$HOME/.cargo/env"

# Extra paths
export PATH=$HOME/bin:$HOME/.dotfiles/bin:/usr/local/bin:$HOME/.local/share/mise/shims:$PATH
export PATH=$HOME/go/bin:$PATH

# AWS
export AWS_CLI_AUTO_PROMPT=off
export AWS_PROFILE_STATE_ENABLED=false
export SHOW_AWS_PROMPT=false # Disable reprompt inside aws zsh plugin
# vim: set ft=zsh
